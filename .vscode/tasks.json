{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run MATLAB script",
      "type": "shell",
      "command": "matlab",
      "args": [
        "-batch",
        "run('${fileBasename}')"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
